<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.example.todayinformation.FullScreenVideoView
        android:id="@+id/vw_play"
        style="@style/video_view_style"></com.example.todayinformation.FullScreenVideoView>
    <TextView
        android:id="@+id/tv_splash_timer"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/sharp_splash"
        android:textColor="@color/color_ffffff"
        android:textSize="18dp"
        android:text="跳过"
        android:layout_width="90dp"
        android:layout_height="wrap_content"/>
</FrameLayout>